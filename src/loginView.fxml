<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>


<AnchorPane maxHeight="300.0" maxWidth="350.0" prefHeight="300.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginController">
   <children>
      <GridPane layoutX="49.0" layoutY="88.0" prefHeight="84.0" prefWidth="252.0" AnchorPane.leftAnchor="49.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="129.0" minWidth="10.0" prefWidth="64.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="208.0" minWidth="10.0" prefWidth="208.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Логин" />
            <Label prefHeight="14.0" prefWidth="56.0" text="Пароль" GridPane.rowIndex="1" />
            <TextField fx:id="txtLogin" prefHeight="22.0" prefWidth="204.0" promptText="Имя пользователя" GridPane.columnIndex="1" />
            <TextField fx:id="txtPassword" promptText="Пароль" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         </children>
      </GridPane>
      <ButtonBar layoutX="101.0" layoutY="172.0" prefHeight="40.0" prefWidth="200.0">
        <buttons>
          <Button fx:id="btnEnter" defaultButton="true" mnemonicParsing="false" onAction="#onBtnClicked" text="Войти" />
            <Button fx:id="btnCancel" cancelButton="true" mnemonicParsing="false" onAction="#onBtnClicked" text="Отмена" />
        </buttons>
      </ButtonBar>
   </children>
</AnchorPane>
